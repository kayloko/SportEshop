{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<h1>Produit</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ produit.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ produit.nom }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ produit.descr }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ produit.prix }}</td>
			</tr>
			<tr>
				<th>Quantit√©</th>
				<td>{{ produit.qte }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ produit.image }}</td>
			</tr>
			<tr>
				<th>date de creation</th>
				<td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{path('produit_index')}}">
		<button class="btn btn-dark">{{ button_label|default('Retour a la liste') }}</button>
	</a>

	<a href="{{ path('produit_edit', {'id': produit.id}) }}">
		<button class="btn btn-dark">{{ button_label|default('Modifier') }}</button>
	</a>

	{{ include('produit/_delete_form.html.twig') }}

{% endblock %}
