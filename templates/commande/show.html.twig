{% extends 'base.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
	<h1>Commande</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ commande.id }}</td>
			</tr>
			<tr>
				<th>Id user</th>
				<td>{{ commande.user.id }}</td>
			</tr>
			<tr>
				<th>Id produit</th>
				<td>
					<select name="produits" id="produits">
						{% for item in commande.items %}
							<option value="{{ item.produit.id }}">{{ item.produit.id }}</option>
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<th>PrixTotal</th>
				<td>{{ commande.prixTotal }}
					DT</td>
			</tr>
			<tr>
				<th>Etat</th>
				<td>{{ commande.etat ? 'En cours' : 'Termin√©' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('commande_index') }}">back to list</a>

	<a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>

	{{ include('commande/_delete_form.html.twig') }}
{% endblock %}
